# Database Configuration
DATABASE_URL="postgresql://postgres:password@localhost:5432/billing_platform"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key"

# OAuth Providers
# Google OAuth 2.0
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Facebook OAuth 2.0
FACEBOOK_CLIENT_ID="your-facebook-client-id"
FACEBOOK_CLIENT_SECRET="your-facebook-client-secret"

# Stripe Configuration
# Get these from your Stripe Dashboard
STRIPE_PUBLISHABLE_KEY=""
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET="whsec_..."
STRIPE_BASIC_PRICE_ID="price_..."
STRIPE_PRO_PRICE_ID="price_..."
STRIPE_ENTERPRISE_PRICE_ID="price_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."

# Application URL
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Email Service (Resend)
# Get this from your Resend Dashboard
RESEND_API_KEY="re_..."

# Rate Limiting (Upstash Redis)
# Get these from your Upstash Dashboard
UPSTASH_REDIS_REST_URL="your-redis-url"
UPSTASH_REDIS_REST_TOKEN="your-redis-token"

# Security
NODE_ENV="development"
PORT=3000
# Minimum password length
MIN_PASSWORD_LENGTH=8
# Session duration in seconds (default: 30 days)
SESSION_DURATION=2592000
# Enable 2FA (optional)
ENABLE_2FA=false

# Email (for notifications)
SMTP_HOST=""
SMTP_PORT=""
SMTP_USER=""
SMTP_PASSWORD=""
EMAIL_FROM="noreply@yourdomain.com"

# Feature flags
ENABLE_REFERRAL_PROGRAM="true"
ENABLE_EMAIL_NOTIFICATIONS="true"

# Cron jobs
# Generate a secure key for cron job authorization
CRON_SECRET_KEY="your-secure-cron-key-here"

# API Configuration
API_URL="http://localhost:3000/api"