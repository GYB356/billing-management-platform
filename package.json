    "lucide-react": "^0.309.0",
    "mathjs": "^12.3.0",
    "next": "14.0.4",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.8",
    "openai": "^4.24.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
