{
  "name": "advanced-billing-system",
  "version": "0.1.0",
  "private": true,
  "description": "AI-powered billing platform with anomaly detection",
  "main": "dist/app.js",
  "scripts": {
    "start": "next start",
    "dev": "next dev",
    "build": "next build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "next lint",
    "format": "prettier --write \"src/**/*.ts\"",
    "migrate": "prisma migrate deploy",
    "postinstall": "prisma generate",
    "prepare": "husky install",
    "type-check": "tsc --noEmit",
    "email:preview": "ts-node lib/email/preview/index.ts",
    "build:production": "bash scripts/production-build.sh",
    "start:production": "bash scripts/start-production.sh",
    "analyze": "ANALYZE=true next build",
    "db:backup": "prisma db push --preview-feature",
    "db:seed": "prisma db seed",
    "cache:clear": "rm -rf .next/cache",
    "validate": "npm run lint && npm run type-check && npm run test"
  },
